#include <bits/stdc++.h>
using namespace std;

int main(){
    std::ios::sync_with_stdio(false);    
    cin.tie(NULL);
    int t,n;
    cin>>t;
    string s;
    while(t--){
        int swaps = 0 , sum = 0;
        cin>>n;
        cin>>s;
        for(int i=0; i<n; ++i){
            if(s[i]-'0' != 0){
                if(i!=n-1)  swaps++;
                sum += s[i]-'0';
            }
        }
        cout<< sum+swaps << "\n";
    }
    return 0;
}
