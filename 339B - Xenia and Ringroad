#include <bits/stdc++.h>
using namespace std;

int main(){
    std::ios::sync_with_stdio(false);    
    cin.tie(NULL);
    int n, m, curr=1;
    long long  tot_time=0;
    cin>>n>>m;
    vector<int> a(m);
    for(int i=0; i<m; ++i){
        cin>>a[i];
        if(a[i] > curr) tot_time += a[i]-curr;
        else if(a[i] < curr)    tot_time += (n-curr) + a[i] ;
        curr = a[i];        
    }
    cout<<tot_time;
    return 0;
}
