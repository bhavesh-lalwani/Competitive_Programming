#include <bits/stdc++.h>
using namespace std;

int main(){
    std::ios::sync_with_stdio(false);    
    cin.tie(NULL);
    int t,n,temp;
    cin>>t;
    while(t--){
        cin>>n;
        vector<int> a(n);
        for(int i=0; i<n; ++i)  a[i]=i+1;
        for(int i=0; i<n-1; i += 2){
            //swap
            temp = a[i+1];
            a[i+1] = a[i];
            a[i] = temp;
        }
        if(n&1){
            //swap last two
            temp = a[n-1];
            a[n-1] = a[n-2];
            a[n-2] = temp;
        }
        for(int i=0; i<n; ++i)  cout<<a[i]<<" " ;
        cout<<"\n";
    }
    return 0;
}
