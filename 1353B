#include <bits/stdc++.h>
using namespace std;

int main(){
    std::ios::sync_with_stdio(false);    
    cin.tie(NULL);
    int t,n,k;
    cin>>t;
    while(t--){
        cin>>n>>k;
        int a[n], b[n];
        for(int i=0; i<n;++i)   cin>>a[i];
        for(int i=0; i<n ;++i)  cin>>b[i];
        sort(a,a+n);
        sort(b,b+n,greater<int>());
        int sum=0;
        for(int i=0; i<n; ++i){
            if(k!=0 && b[i]>a[i]){
                sum += b[i];
                k--;
            }
            else    sum += a[i];
        }
        cout<<sum<<"\n";
    }
    return 0;
}
