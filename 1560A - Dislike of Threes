#include <bits/stdc++.h>
using namespace std;

int main(){
    ios::sync_with_stdio(false);
    cin.tie(NULL);
    vector<int> a;
    int i=1;
    while(a.size()!=1000){
        if(i%10 != 3 && i%3!=0)   a.emplace_back(i);
        i++;
    }
    int t,k;
    cin>>t;
    while(t--){
        cin>>k;
        cout<<a[k-1]<<"\n";
    }
    return 0;
}
