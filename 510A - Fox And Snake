#include <bits/stdc++.h>
using namespace std;
int main(){
    ios::sync_with_stdio(false);
    cin.tie(NULL);
    int r,c;
    bool last=true;
    cin>>r>>c;
    for(int i=1; i<=r; ++i){
        for(int j=1; j<=c; ++j){
            if(i&1) cout<<"#";
            else{
                if(j==1 && last==false) cout<<"#";
                else if(j==c && last==true) cout<<"#";
                else    cout<<".";
            }
        }
        if(!(i&1)){
            if(last)    last=false;
            else    last=true;
        }
        cout<<"\n";
    }
    return 0;
}
