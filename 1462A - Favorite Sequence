#include <bits/stdc++.h>
using namespace std;
#define vi vector<int>
int main(){
    std::ios::sync_with_stdio(false);    
    cin.tie(NULL);
    int t,n;
    cin>>t;
    while(t--){
        cin>>n;
        vi a(n);
        for(int i=0; i<n; ++i)  cin>>a[i];
        if(n==1)    cout<<a[0];
        else{
            for(int i=0; i<n/2; ++i){
                cout<<a[i]<<" "<<a[n-i-1]<<" ";
            }
            if(n&1) cout<<a[n/2];
        }
        cout<<"\n";
    }
    return 0;
}
